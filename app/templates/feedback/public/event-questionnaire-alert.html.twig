{% extends 'base.html.twig' %}

{% block title %}Feedback-Fragebogen - {{ event.title }}{% endblock %}

{% block body %}
  {% embed 'common/header/base-page-header.html.twig' with {'title': 'Feedback-Fragebogen', 'subtitle': event.title} %}
    {% block breadcrumb %}
      <li>Rezepte</li>
      <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
      <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
      <li class="active">Feedback-Fragebogen</li>
    {% endblock %}
  {% endembed %}
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="alert alert-{{ type }}" role="alert">
          {{ message }}
        </div>
    </div>
  </div>
{% endblock %}
