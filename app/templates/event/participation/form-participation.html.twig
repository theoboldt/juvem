<div class="row">
    <div class="col-xs-12">
        {{ form_errors(form) }}
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="row">
            <div class="col-xs-12 col-sm-4">
                {{ form_row(form.salutation) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.nameFirst) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.nameLast) }}
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6">
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.addressStreet) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-3">
                {{ form_row(form.addressZip) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_row(form.addressCity) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.addressCountry) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.email) }}
            </div>
        </div>
    </div>
</div>
<div class="row">
  {% if form.customFieldValues.children|length == 0 %}
    <div style="display: none">{{ form_row(form.customFieldValues) }}</div>
  {% endif %}
  {% for fieldName,formField in form.customFieldValues %}
    {% if fieldName starts with 'custom_field_' %}
      <div class="col-xs-12 col-sm-6">
        {% include 'event/participation/embed-form-custom-field.html.twig' with {'formField': formField, helpExpanded: false} %}
      </div>
    {% endif %}
  {% endfor %}
</div>
