{% extends 'base.html.twig' %}

{% block title %}Einteilungsfelder ({{ event.title }}){% endblock %}

{% block body %}
    {% embed 'common/header/base-page-header.html.twig' with {'title': 'Einteilungsfelder', 'subtitle': event.title} %}
        {% block breadcrumb %}
            <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
            <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
            <li class="active">Einteilungsfelder</li>
        {% endblock %}
    {% endembed %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="bootstrap-table-toolbar" class="form-inline bootstrap-table-toolbar">
                </div>
                <table id="eventGroupsTable" class="table table-striped table-remote-content"
                       data-id-field="bid" data-toggle="table" data-cache="false" data-pagination="true"
                       data-side-pagination="client" data-show-refresh="true" data-show-columns="true"
                       data-search-align="right" data-toolbar="#bootstrap-table-toolbar" data-striped="true"
                       data-show-filter="true" data-search="true" data-page-size="25" data-sub-id="e{{ event.eid }}"
                       data-url="{{ path('event_admin_groups_data', {eid: event.eid}) }}"
                       data-sort-name="managementTitle" data-sort-order="asc">
                    <thead>
                    <tr>
                        <th data-field="bid" data-sortable="true" data-visible="false">#</th>
                        <th data-field="managementTitle" data-sortable="true">Feld</th>
                        <th data-field="choices" data-sortable="true">Optionen</th>
                        <th data-field="acquisition" data-sortable="false">Erfassung</th>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
