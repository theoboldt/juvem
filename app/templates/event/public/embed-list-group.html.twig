<aside class="list-group event-embed-list">
    {% if events|length == 0 %}
      <div class="list-group-item list-group-item-info">Im Moment sind keine Veranstaltungen aktiv.</div>
    {% endif %}
    {% for event in events %}
        <a href="{{ path('event_public_detail', {eid: event.eid}) }}" class="list-group-item">
            <h4 class="list-group-item-heading">{{ event.title }}</h4>
            <p class="list-group-item-text">{{ event.descriptionMeta(true)|e }}</p>
        </a>
    {% endfor %}
</aside>
