{% extends 'base.html.twig' %}

{% block title %}Neuen Mitarbeiter anlegen ({{ event.title }})
{% endblock %}
{% block body %}
    {% embed 'common/header/base-page-header.html.twig' with {'title': 'Anmeldung', 'subtitle': 'Anmeldungsdaten bearbeiten'} %}
        {% block breadcrumb %}
                <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
                <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
                <li><a href="{{ path('admin_event_employee_list', {'eid': event.eid }) }}">Mitarbeiter</a></li>
                <li class="active">Neuen Mitarbeiter anlegen</li>
        {% endblock %}
    {% endembed %}
    <div class="container">
        {% embed 'event/admin/employee/embed-form.html.twig' with {'form': form} %}
            {% block submit %}Mitarbeiter anlegen{% endblock %}
        {% endembed %}
    </div>

{% endblock %}
