{% import _self as m %}
{% extends 'base.html.twig' %}

{% block title %}Mitarbeiter importieren ({{ event.title }})
{% endblock %}
{% block body %}
  {% embed 'common/header/base-page-header.html.twig' with {'title': 'Mitarbeiter', 'subtitle': 'importieren'} %}
    {% block breadcrumb %}
      <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
      <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
      <li><a href="{{ path('admin_event_employee_list', {'eid': event.eid }) }}">Mitarbeiter</a></li>
      <li class="active">Mitarbeiter importieren</li>
    {% endblock %}
  {% endembed %}
  <div class="container">
    {{ form_start(form) }}
    <div class="row">
      <div class="col-xs-12">
        {{ form_errors(form) }}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {% macro prototypeEmployee(formElement, acquisitionFields) %}
          <div class="panel panel-default prototype-element">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-10 col-sm-8">
                  <h4 class="panel-title">Mitarbeiter</h4>
                </div>
                <div class="col-xs-2 col-sm-4 text-right">
                  <a href="#" class="btn btn-danger btn-xs prototype-remove"
                     title="Mitarbeiter entfernen">{{ 'remove-sign'|glyph }} <span class="hidden-xs">Mitarbeiter entfernen</span></a>
                </div>
              </div>
            </div>
            <div class="panel-body">
              {% embed 'event/admin/employee/embed-form-employee.html.twig' with {'formEmployee': formElement, 'acquisitionFields': acquisitionFields} %}{% endembed %}
              <div style="display: none">{{ form_widget(formElement.predecessor) }}</div>
            </div>
          </div>
        {% endmacro %}
        <div class="employees"
             data-prototype="{{ m.prototypeEmployee(form.employees.vars.prototype, acquisitionFields)|e('html_attr') }}">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <div class="prototype-elements">
                  {{ form_label(form.employees) }}
                  {{ form_errors(form.employees) }}
                  {% for formEmployee in form.employees %}
                    {{ m.prototypeEmployee(formEmployee, acquisitionFields) }}
                  {% endfor %}
                  {% if form.employees|length == 0 %}
                    {{ form_row(form.employees) }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>

        {{ form_rest(form) }}
      </div>

      <div class="col-xs-12">
        <input type="submit" class="btn btn-primary navbar-btn" value="Mitarbeiter importieren"/>
      </div>
    </div>
    {{ form_end(form) }}

  </div>

{% endblock %}


