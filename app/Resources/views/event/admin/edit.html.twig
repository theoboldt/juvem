{% extends 'base.html.twig' %}

{% block title %}Veranstaltung bearbeiten{% endblock %}

{% block body %}
    {% embed 'common/header/base-page-header.html.twig' with {'title': event.title, 'subtitle': 'bearbeiten'} %}
        {% block breadcrumb %}
            <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
            <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
            <li class="active">Veranstaltung bearbeiten</li>
        {% endblock %}
    {% endembed %}
    <div class="container">
        {{ form_start(form) }}
        {% include '/event/admin/form-html.html.twig' with {'form': form} %}
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.save, { 'attr': {'class': 'btn-primary'}, 'label' : 'Speichern' }) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascriptCustom %}
    {% include '/event/admin/form-script.html.twig' %}
{% endblock %}
