{% extends 'base.html.twig' %}

{% block title %}Teilnehmer verwalten ({{ event.title }}){% endblock %}

{% block body %}
    {% embed 'common/header/base-page-header.html.twig' with {'title': 'Teilnehmer', 'subtitle': 'verwalten'} %}
        {% block breadcrumb %}
            <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
            <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
            <li class="active">Teilnehmer</li>
        {% endblock %}
    {% endembed %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="bootstrap-table-toolbar" class="form-inline">
                    <div class="btn-group" role="group">
                        {{ 'is_confirmed'|tableFilterButtonTri(2, 'nur bestätigte', 'ohne bestätigte', 'mit und ohne bestätigte', true) }}
                        {{ 'is_withdrawn'|tableFilterButtonTri(1, 'nur zurückgezogene', 'ohne zurückgezogene', 'inkl. zurückgezogen') }}
                        {{ 'is_paid'|tableFilterButtonTri(2, 'nur bezahlte', 'ohne bezahlte', 'bezahlt und nicht bezahlt') }}
                        {{ 'is_deleted'|tableFilterButtonTri(1, 'nur gelöschte', 'ohne gelöschte', 'mit und ohne gelöschte') }}
                        <a href="{{ path('event_participants_export', {eid: event.eid}) }}"
                           class="btn btn-default btn-xs btn-download">
                            {{ 'export'|glyph }}
                        </a>
                    </div>
                </div>
                <table id="participantsListTable" class="table table-striped table-remote-content"
                       data-id-field="did" data-toggle="table" data-cache="false" data-pagination="true"
                       data-side-pagination="client" data-show-refresh="true" data-show-columns="true"
                       data-search-align="right" data-toolbar="#bootstrap-table-toolbar" data-striped="true"
                       data-show-filter="true" data-search="true" data-page-size="25" data-sub-id="e{{ event.eid }}"
                       data-url="{{ path('event_participants_list_data', {eid: event.eid}) }}">
                    <thead>
                    <tr>
                        <th data-field="aid" data-sortable="true" data-visible="false">#</th>
                        <th data-field="pid" data-sortable="true" data-visible="false">Teilnahme
                            <wbr>
                            nummer
                        </th>
                        <th data-field="nameFirst" data-sortable="true">Vorname</th>
                        <th data-field="nameLast" data-sortable="true" data-order="asc">Nachname</th>
                        <th data-field="age" data-sortable="true"><abbr
                                    title="Alter der Teilnehmer bei der Veranstaltung">Alter</abbr></th>
                        <th data-field="phone" data-sortable="false">Telefon
                            <wbr>
                            nummern
                        </th>
                        <th data-field="registrationDate" data-sortable="true" data-visible="false"
                            title="Zeitpunkt des Eingangs der Anmeldung">Eingang
                        </th>
                        <th data-field="gender" data-sortable="true" data-visible="false">Geschlecht</th>
                        <th data-field="status" data-sortable="false">Status</th>
                        {% for attribute in event.getAcquisitionAttributes(true, false) %}
                            <th data-field="participation_acq_field_{{ attribute.getBid }}" data-sortable="true"
                                data-visible="false"><abbr
                                        title="{{ attribute.managementDescription }}">{{ attribute.managementTitle }}</abbr>
                            </th>
                        {% endfor %}
                        {% for attribute in event.getAcquisitionAttributes(false, true) %}
                            <th data-field="participants_acq_field_{{ attribute.getBid }}" data-sortable="true"
                                data-visible="false"><abbr
                                        title="{{ attribute.managementDescription }}">{{ attribute.managementTitle }}</abbr>
                            </th>
                        {% endfor %}
                    </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>
{% endblock %}
